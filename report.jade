
doctype html
html
    head
        meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
        style.
            *{
                font-family: sans-serif;
                box-sizing: border-box;
            }
            body{
                margin: 0;
                padding: 20px;
                //- overflow: hidden;
            }
            table{
                width:100%;
                border-spacing: 0;
                table-layout: fixed;
                border-collapse: collapse;
            }
            td{
                padding: 3px 10px;
            }

            .bordered{ border: 1px solid #ABCDE8; }

            .back-dark{ background-color: #000000; }
            .back-light{ background-color: #F0F8F4; }
            .back-blue{ background-color: #83B5DD; }
            .back-lightblue{ background-color: #ABCDE8; }

            .block{  display: block; }
            .iblock{ display: inline-block; }
            .inline{ display: inline; }

            .text-black{ color: black; }
            .text-dark{  color: #505050; }
            .text-clear{ color: #909090; }
            .text-white{ color: white; }
            .text-bold{  font-weight: bold; }

            .text-left{ text-align: left; }
            .text-right{ text-align: right; }
            .text-center{ text-align: center; }
            .text-top{ vertical-align: top; }
            .text-middle{ vertical-align: middle; }
            .text-bottom{ vertical-align: bottom; }

            .text-xs{ font-size: 10px;  }
            .text-s{  font-size: 12px; }
            .text-m{  font-size: 16px; }
            .text-l{  font-size: 20px; }
            .text-xl{ font-size: 30px; }
            .text-xxl{ font-size: 40px; }
            .text-huge{ font-size: 50px; }
            .small{ font-size: 85% }

            .height-min{ height: 2px;  }
            .height-xs{ height: 6px;  }
            .height-s{  height: 12px; }
            .height-m{  height: 18px; }
            .height-l{  height: 26px; }
            .height-xl{ height: 36px; }
            .height-huge{ height: 50px; }

            .divider-min{ height: 1px;  }
            .divider-xs{ height: 5px;  }
            .divider-s{  height: 10px; }
            .divider-m{  height: 15px; }
            .divider-l{  height: 20px; }
            .divider-xl{ height: 25px; }
            .divider-huge{ height: 40px;  }

            .padded{ padding: 15px }
            .padded-xs{ padding: 5px }
            .pad-v{ padding: 15px 0 }
            .pad-h{ padding: 0 15px }
            .unpad{  padding: 0px; }

            .mar{margin: 15px }
            .unmar{margin: 0 }

            .divider-xs{ height: 5px;  }
            .divider-s{  height: 10px; }
            .divider-m{  height: 15px; }
            .divider-l{  height: 20px; }
            .divider-xl{ height: 25px; }
            .divider-huge{ height: 40px;  }

            .undecored{ text-decoration: none; }

            table td.header{
                font-size: 12px;
                color: white;
                text-align: center;
                vertical-align: middle;
                background-color: #83B5DD;
                border: 1px solid #ABCDE8;
            }

            table td.subheader{
                font-size: 10px;
                color: white;
                text-align: center;
                vertical-align: middle;
                background-color: #A0C8E6;
                border: 1px solid #ABCDE8;
            }

            table td.cell{
                font-size: 10px;
                color: black;
                text-align: center;
                vertical-align: middle;
                background-color: #F0F8F4;
                border: 1px solid #ABCDE8;
                max-width: 100%;
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
            }


